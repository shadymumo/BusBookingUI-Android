<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rellyblu"

    android:orientation="vertical"

    android:weightSum="10"
    tools:context=".MainRoutesActivity">


    <ImageView
        android:id="@+id/logohii"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        app:srcCompat="@drawable/github_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/calibri"
        android:text="Get to SGR station in Time by choosing your route"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="532dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="2"
        tools:ignore="MissingConstraints">

        <!-- ROW 1  -->
        <!-- COLUMN 1  -->
        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/background_color"
            android:onClick="gototHIKROUTE"

            app:neumorph_lightSource="rightBottom"
            app:neumorph_shadowColorDark="@color/text_color"
            app:neumorph_shadowElevation="3dp"


            app:neumorph_shapeType="flat">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"

                    android:text="THIKA>JUJA>RUIRU>SGR STATION"
                    android:textAlignment="center"
                    android:textColor="@color/background"
                    android:textSize="20sp" />
            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>

        <!-- COLUMN 2  -->
        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="gotoNairobiwestyTown"
            app:neumorph_lightSource="rightBottom"

            app:neumorph_shadowColorDark="@color/text_color"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"

                    android:text="NAIROBI CBD AND WESTLANDS"
                    android:textAlignment="center"
                    android:textColor="@color/background"
                    android:textSize="20sp" />
            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>

        <!-- ROW 2  -->
        <!-- COLUMN 1  -->
        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="gotoAlsops"
            app:neumorph_lightSource="rightBottom"

            app:neumorph_shadowColorDark="@color/text_color"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"

                    android:text="ALLSOPS >EMBAKASI ROUTE"
                    android:textAlignment="center"
                    android:textColor="@color/background"
                    android:textSize="20sp" />
            </LinearLayout>


        </soup.neumorphism.NeumorphCardView>

        <!-- COLUMN 2  -->
        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"

            android:layout_columnWeight="1"
            app:neumorph_lightSource="rightBottom"

            app:neumorph_shadowColorDark="@color/text_color"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"

                    android:text="KIKUYU ROUTE"
                    android:textAlignment="center"
                    android:textColor="@color/background"
                    android:textSize="20sp" />
            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>

        <!-- ROW 3  -->
        <!-- COLUMN 1  -->
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"

            android:layout_columnWeight="1"
            app:neumorph_lightSource="rightBottom"

            app:neumorph_shadowColorDark="@color/text_color"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="gotoKiamburuaka" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"

                    android:text="KIAMBU > RUAKA ROUTE"
                    android:textAlignment="center"
                    android:textColor="@color/background"
                    android:textSize="20sp" />
            </LinearLayout>


        </soup.neumorphism.NeumorphCardView>

        <!-- COLUMN 2  -->
        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"

            android:layout_columnWeight="1"
            app:neumorph_lightSource="rightBottom"
            android:onClick="gotoHomepage"
            app:neumorph_shadowColorDark="@color/text_color"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/background_color"
                    android:backgroundTint="#3F51B5"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_arrow_back_white_24dp"
                        android:backgroundTint="#ffff" />

                </LinearLayout>

                <TextView
                    android:id="@+id/logouttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"


                    android:text="Back"
                    android:textAlignment="center"
                    android:textColor="@color/background_color"
                    android:textSize="20sp" />

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>
    </GridLayout>
</LinearLayout>


