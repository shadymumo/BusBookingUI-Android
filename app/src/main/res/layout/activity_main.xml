<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bus_image_3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rellyblu"
        android:onClick="gotoDriverLogin"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Welcome"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:transitionName="textview" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            app:srcCompat="@drawable/github_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/calibri"
            android:text="Let's get started by choosing the right service. Ride Go offers quality transport services with a price advantage."
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <soup.neumorphism.NeumorphButton

            android:id="@+id/btndriverlogin"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"

            android:fontFamily="sans-serif"
            android:onClick="gotomainroutes"
            android:text="Book ride to sgr station"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:neumorph_lightSource="rightBottom"
            app:neumorph_shadowColorDark="@color/text_color"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

        </soup.neumorphism.NeumorphButton>

        <soup.neumorphism.NeumorphButton

            android:id="@+id/btnroutes"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="260dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"

            android:fontFamily="sans-serif"

            android:onClick="gotoDriverLogin"
            android:text="Driver Sign In"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:neumorph_lightSource="rightBottom"
            app:neumorph_shadowColorDark="@color/text_color"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

        </soup.neumorphism.NeumorphButton>

        <soup.neumorphism.NeumorphButton

            android:id="@+id/btnhelp"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="260dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="Help"


            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:neumorph_lightSource="rightBottom"
            app:neumorph_shadowColorDark="@color/text_color"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat"></soup.neumorphism.NeumorphButton>

    </LinearLayout>


</RelativeLayout>